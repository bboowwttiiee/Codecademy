var mixtape: [String] = []
mixtape.append("Beggin - M√•neskin")
mixtape.append("Cosmic Girl (Dimitri From Paris Remix Radio Edit) - Jamiroquai")
mixtape.append("I Was Looking - Zemfira")
mixtape.append("Take On Me - a-ha")
mixtape.append("Dancing In The Moonlight x Pumped Up Kicks - Darcy Strokes")
mixtape.append("–í–µ—á–Ω–æ—Å—Ç—å - MONATIK")

print(mixtape.count)

mixtape.remove(at: 1)
mixtape.insert("Cosmic Girl (Dimitri From Paris Remix Radio Edit) - Jamiroquai", at: 1)

for song in 1...mixtape.count { // For each song in mixtape array
  if song == 1 { // If before first song it prints Side A
    print("\nSide A:\n")
  } else if song == 4 { // If after third song it prints Side A
    print("\nSide B:\n")
  }
  print("\(song). \(mixtape[song - 1])") // Each loop it prints number of a song and a song from the array by its index minus 1
}
